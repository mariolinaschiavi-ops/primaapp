    <script>
        // Sintesi vocale per spiegazioni
        function riproduciAudio(tipo) {
            const synth = window.speechSynthesis;
            let testo = "";

            if (tipo === "intro") {
                testo = "Un'equazione di primo grado √® un'uguaglianza che contiene un'incognita alla prima potenza. Ad esempio, due x pi√π tre uguale sette.";
            } else if (tipo === "proprieta") {
                testo = "Per risolvere un'equazione di primo grado, possiamo applicare due propriet√†. La propriet√† additiva, che ci permette di sommare o sottrarre lo stesso numero a entrambi i membri, e la propriet√† moltiplicativa, che consente di moltiplicare o dividere entrambi i membri per lo stesso numero, diverso da zero.";
            }

            const utterance = new SpeechSynthesisUtterance(testo);
            utterance.lang = "it-IT";
            utterance.rate = 1;
            synth.speak(utterance);
        }

        // Funzione per verificare le risposte
        function verificaRisposta(button, corretta) {
            const feedback = button.parentElement.querySelector(".feedback");
            if (corretta) {
                feedback.textContent = "‚úÖ Corretto! Ottimo lavoro!";
                feedback.style.color = "green";
                riproduciFeedback("corretto");
            } else {
                feedback.textContent = "‚ùå Sbagliato! Riprova.";
                feedback.style.color = "red";
                riproduciFeedback("sbagliato");
            }
        }

        // Feedback sonoro per la risposta
        function riproduciFeedback(tipo) {
            const synth = window.speechSynthesis;
            let testo = tipo === "corretto" ? "Corretto! Complimenti!" : "Sbagliato. Riprova!";
            const utterance = new SpeechSynthesisUtterance(testo);
            utterance.lang = "it-IT";
            utterance.rate = 1;
            synth.speak(utterance);
        }
    </script>
